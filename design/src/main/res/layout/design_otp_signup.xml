<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="self"
            type="com.github.kr328.clash.design.OTPDesignSignup" />
        <import type="com.github.kr328.clash.design.OTPDesignSignup.Request" />

    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:fitsSystemWindows="true">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="370dp"
            android:clickable="true"
            android:onClick="@{()->self.requests.offer(Request.GoBack)}"
            android:src="@drawable/arrow" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/inter_bold"
            android:text="验证码验证"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size" />
        <EditText
            android:id="@+id/otp1"
            android:layout_width="41dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginStart="22dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:onClick="@{()->self.requests.offer(Request.Setup)}"
            android:maxLength="1"
            android:nextFocusRight="@id/otp2"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/otp_text_size" />
        <EditText
            android:id="@+id/otp2"
            android:layout_width="41dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginStart="80dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusRight="@id/otp3"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/otp_text_size" />
        <EditText
            android:id="@+id/otp3"
            android:layout_width="41dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginStart="138dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusRight="@id/otp4"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/otp_text_size" />
        <EditText
            android:id="@+id/otp4"
            android:layout_width="41dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginStart="196dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusRight="@id/otp5"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/otp_text_size" />
        <EditText
            android:id="@+id/otp5"
            android:layout_width="41dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginStart="254dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusRight="@id/otp6"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/otp_text_size" />
        <EditText
            android:id="@+id/otp6"
            android:layout_width="41dp"
            android:layout_height="@dimen/textbox_height"
            android:layout_marginStart="312dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/otp_text_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="318dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:onClick="@{()->self.requests.offer(Request.Verify)}"
            android:text="验证"
            android:textColor="@android:color/white"
            android:textFontWeight="600"
            android:textSize="@dimen/normal_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="680dp"
                android:text="没有收到验证码？"
                android:textColor="@android:color/white"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/no_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="680dp"
                android:layout_marginLeft="210dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="@{()->self.requests.offer(Request.Resend)}"
                android:text="再次发送"
                android:textColor="@color/color_button"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>